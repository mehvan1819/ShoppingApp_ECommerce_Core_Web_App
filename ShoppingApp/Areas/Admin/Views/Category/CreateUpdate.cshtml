@model ShoppingApp_Models.ViewModel.CategoryVM

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpdate" asp-controller="Category" method="post">
            <div>
                <h1>@((Model.Category == null || Model.Category.Id == 0) ? "Create Category" : "Update Category") </h1>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.DisplayOrder" class="control-label"></label>
                <input asp-for="Category.DisplayOrder" class="form-control" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>
            <div style="margin-top:10px" class="form-group">
                @if (Model.Category == null || Model.Category.Id == 0)
                {
                    <button style="margin-top:10px" type="submit" value="Save" class="btn btn-primary">Create</button>
                }
                else
                {
                    <button style="margin-top:10px" type="submit" value="Save" class="btn btn-primary">Update</button>
                }
                <a style="margin-top:10px" class="btn btn-primary" asp-action="Index" asp-controller="Category">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
